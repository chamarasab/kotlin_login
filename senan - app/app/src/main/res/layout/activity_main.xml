<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5" android:layout_marginTop="90dp"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/back0" android:id="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/view2"
        android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="350dp" android:id="@+id/view" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:background="@drawable/ic_back_rectangle"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="100dp" android:id="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"
        android:background="@drawable/ic_wave_top"/>
    <TextView
        android:text="Classroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp" android:layout_marginTop="32dp" android:fontFamily="@font/montserrat"
        android:textColor="#fbfbfd" android:textSize="30sp"/>
    <TextView
        android:text="Virtual Learning Platform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginStart="27dp" android:fontFamily="@font/montserrat" android:textColor="#f5f5f7"/>
    <TextView
        android:text="Hi there,"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginTop="52dp" android:layout_marginStart="32dp" android:fontFamily="@font/montserrat"
        android:textColor="#f5f5f7" android:textSize="16sp"/>
    <TextView
        android:text="Dear Students And Lectures,"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:fontFamily="@font/montserrat" android:textSize="18sp" android:textColor="#fbfbfd"
        android:layout_marginStart="32dp" android:layout_marginTop="4dp"/>
    <TextView
        android:text="You're Welcome here to study "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:fontFamily="@font/montserrat" android:textSize="19sp" android:textColor="#f5f5f7"
        android:layout_marginStart="32dp" android:layout_marginTop="4dp"/>
    <TextView
        android:text="Online and Freely"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:textColor="#f5f5f7" android:fontFamily="@font/montserrat"
        android:textSize="20sp" android:layout_marginStart="32dp" android:layout_marginTop="6dp"/>
    <TextView
        android:text="Yeah !  It's Completely Free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView9"
        android:textColor="#f5f5f7" android:fontFamily="@font/montserrat"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginTop="8dp" android:layout_marginStart="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>